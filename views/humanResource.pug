// document title
title Stay Clean
// Grid row
.row.bg-light
  // Grid column for side bar
  .col-lg-3
    // side bar
    .bg-white.shadow(style="height: 97vh")
      // heading
      h4.text-center.pt-2 Stay Clean Initiative
      h6.text-center.
        
        "Contact Us today, We manage your wastes with love"
      
      // logged in user
      .shadow-sm.p-2.m-4.bg-light.rounded Bahati here
      // side bar navigations
      ul
        li
          a.text-dark(href="/dashboard")
            i.fa.fa-dashboard.m-3
            | Dashboard
        li
          a.text-dark(href="/orders")
            i.fa.fa-phone.m-3
            | Orders
        li
          a.text-dark(href="/employee")
            i.fa.fa-users.m-3
            | Human Resource
        li
          a.text-dark(href="/dashboard/trucks")
            i.fa.fa-truck.m-3
            | Trucks
        li
          a.text-dark(href="/dashboard/finance")
            i.fa.fa-money.m-3
            | Finance
        form(method="post" action='/logout') 
              button.btn.btn-danger.btn-block.col-lg-5.m-5(type='submit') LOGOUT
  // Grid column for dashboard area
  .col-lg-9.bg-light
    // relative of dashboard
    .shadow-none.mx-4.p-2.bg-success.rounded.text-white(style="margin: 10px 1px -30px 1px; position: relative").
      
        Employee List

    //- form.pull-right.search(action='/employee')(style="margin: -8px 1px -30px 1px;")
    //-             div.row
    //-                 div.col-lg-8
    //-                     input.form-control(name='role' placeholder="Enter your search term(role) ...")
    //-                 div.col-lg-4
    //-                     input.btn.btn-dark.btn-block(type="submit", value='Search')
    // dashboard area
    .m-2.bg-white.shadow.rounded(style="height: 92vh")
      // ADD employee
      .p-5
        // add driver btn
        a.btn.btn-secondary(href='/employee/createEmployee')
          | ADD EMPLOYEE +
          i.fa.fa-users

        form.pull-right.search(action='/employee/employeeSearch')
                div.row.mx-4
                    div.col-lg-10
                        input.form-control(name='role' placeholder="Enter your search term(role) ...")
                    div.col-lg-2
                        input.btn.btn-secondary.btn-block(type="submit", value='Search')
      table.table
        thead.thead-dark.mx-5
            tr
                th Profile
                th Full Name 
                th Gender
                th Past incidences
                th Role
        tbody
            if users.length
            each user in users
                tr
                    td
                        img(src='/'+user.imageupload width="40px" height="40px")
                    td #{user.lastname +' '+ user.firstname}
                    td #{user.gender}
                    td #{user.pastincidences}
                    td #{user.role}
                    td
                        a(href='/employee/update/'+user._id) Update 
                    td
                        form(method="post" action='/employee/delete')
                            input(type="hidden", placeholder="", name="id", value=user._id)
                            button.btn.btn-dark.btn-block(type="submit") Delete
        
        
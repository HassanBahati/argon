// document title
title Stay Clean
.modal-dialog.text-center
  .col-sm-9.main-section
    .modal-content
      .col-12.user-img
        //- img(src="/images/user-icon.png")
      .col-12.form-input
        form(name="user", action="/users/register", method="POST")
          .form-group
            i.fa.fa-user(aria-hidden="true")
            input.form-control(name="userName", type="text", placeholder="Enter Name")
          .form-group
            i.fa.fa-envelope(aria-hidden="true")
            input.form-control(name="userEmail", type="email", placeholder="Enter Email")
          .form-group
            i.fa.fa-lock(aria-hidden="true")
            input.form-control(name="userPassword", type="password", placeholder="Enter password")
          .form-group
            i.fa.fa-lock(aria-hidden="true")
            input.form-control(name="confirmPassword", type="password", placeholder="Confirm password")
          button.btn.btn-warning(type="submit")
            | SIGNUP 
            i.fa.fa-sign-in(aria-hidden="true")
      .col-12.forgot
        a(href='/users/login').
          Login
          
